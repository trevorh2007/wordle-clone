{
  "name": "wordle-clone",
  "version": "0.1.0",
  "description": "A modern Wordle clone built with React, Vite, and styled-components",
  "author": "Trevor H <trevorh2007@example.com>",
  "license": "MIT",
  "type": "module",
  "homepage": "https://trevorh2007.github.io/wordle-clone",
  "repository": {
    "type": "git",
    "url": "https://github.com/trevorh2007/wordle-clone.git"
  },
  "bugs": {
    "url": "https://github.com/trevorh2007/wordle-clone/issues"
  },
  "keywords": [
    "wordle",
    "game",
    "react",
    "vite",
    "styled-components",
    "web-game"
  ],
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --config config/eslint.config.js --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --config config/prettier.config.js",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --config config/prettier.config.js",
    "format:staged": "prettier --write --config config/prettier.config.js",
    "type-check": "tsc --noEmit",
    "test": "jest --config=config/jest/jest.config.cjs",
    "test:watch": "jest --config=config/jest/jest.config.cjs --watch",
    "test:coverage": "jest --config=config/jest/jest.config.cjs --coverage",
    "test:ci": "jest --config=config/jest/jest.config.cjs --coverage --watchAll=false --passWithNoTests",
    "validate": "npm run type-check && npm run lint && npm run test:ci && npm run build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-modal": "^3.16.1",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-react": "^7.28.5",
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.9",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/testing-library__react": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.24",
    "babel-jest": "^30.2.0",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^7.15.4",
    "gh-pages": "^6.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
